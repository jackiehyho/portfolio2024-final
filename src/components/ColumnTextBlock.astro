---
interface Props {
  content: Array<{ header: string, description: string, list: Array<string>}>;
  header: string;
}

const {content, header, ...rest } = Astro.props;

---


<section class="container">
  {content && (
    <h2 class="container-header">{header}</h2>

      <>
    <div class="container-content">
      {content?.map((block) => (
    <div class="container-item">
    <h3 class="container-item-header">{block.header}</h3>
    <p>{block.description}</p>
    {block.list && (
      <>
      <ul class="container-item-list">
        {block.list.map((item) => (
        <li class="container-item-list-item">{item}</li>
        ))}
      </ul>
      </>
      )}
    </div>  
    ))}
    </div>
      </>
      )}

    </section>

    <style lang="scss">
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
      padding: 2rem;
      background: linear-gradient(to right, #02AAB0 0%, #00CDAC  51%, #02AAB0  100%);      
      border-radius: 2rem;

    }
    .container-header {
      color: white;
      font-size: 2rem;
    }

    h2,h3, p{
      color: white;

    }
    </style>