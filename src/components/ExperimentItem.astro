---
interface Props {
  url: string;
  title: string;
  category: string;
  description: string;
  image: object;
  imageGIF: object;
  alt: string;
}

const { url, title, category, description, image, alt, imageGIF } = Astro.props;

import Button from "./Button.astro";
---

<li class="experiment-list-item">
  <article class="experiment-container">
    <img class="image" src={(image as { src: string }).src} alt={alt} />
    <img class="image-gif" src={(imageGIF as { src: string }).src} alt={alt} />
    <span class="experiment-category">{category}</span>
    <div class="experiment-text-container">
      <h2 class="experiment-list-title">{title}</h2>
      <div class="experiment-meta-data">
        <p class="experiment-label">Web Type</p>
        <p class="experiment-data">Web</p>
      </div>
      <div class="experiment-meta-data">
        <p class="experiment-label">UI Component</p>
        <p class="experiment-data">Slider</p>
      </div>
      <div class="experiment-meta-data">
        <p class="experiment-label">Total Time(h)</p>
        <p class="experiment-data">5</p>
      </div>
      <div class="experiment-meta-data">
        <p class="experiment-label">Stack</p>
        <p class="experiment-data">HTML, CSS, JS</p>
      </div>
    </div>
    <div class="button-container">
      <Button
      className="flat-button"
      buttonLink={url}
      buttonCTA="View Experiment"
    />
  </div>
  </article>
  
  </li>

  <style lang="scss">

    .image-gif {
      display: none;
      width: 100%;
      height: 100%;
      z-index: 1;
    }
    .button {
      font-size: 1rem;
      background-image: var(--primaryButtonColour);
      color:white;
      float: right;
      border-radius: 0;
      position: relative;
      margin: auto;
      width: 100%;
      padding: 1rem;
      margin: 0;
    }
    .button-container{
      display:flex;
      justify-content:center;
      align-items:center;
      width: 100%;
    }
    .experiment-container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 400px;
      background: lightblue;
  
      &:hover{
        .image-gif {
          display:block;
        }
        .image {
          display:none;
        }
        cursor: pointer;
      }
      img {
        width: 100%;
        height: 100%;
      }
    }

    .image-gif {
          display:block;
    }
    .image {
          display:none;
        }
    .experiment-list-item {
      list-style-type: none;
      margin: 1rem;
      background: #eee;
      z-index: 5;
      transition: all 0.25s ease-in;
      border-radius: 0rem;
      text-align:center;
      width: 100%;
      &:hover {
        transition: all 0.25s ease-in;
      }
    }

    .experiment-list-title {
      font-size: 1.25rem;
      max-width: 100%;
    }

    .experiment-item-link {
      height: 100%;
      color: var(--primaryTextColour);
      text-decoration: none;
      &:visited,
      &:active {
        color: var(--primaryTextColour);
      }
    }

    .experiment-meta-data{
      display:flex;
      flex-direction:row;
      justify-content:center;
      align-items:center;
      border-bottom: 1px solid #eee;
      &:last-child{
        border-bottom: none;
      } 
    }

    .experiment-label{
      text-align:left;
      width: 50%;
      font-weight: 400;
    }

    .experiment-data{
      text-align:right;
      width: 50%;

    }

    .experiment-category {
      top: 1rem;
      left: 1rem;
      padding: 0.5rem;
      text-transform: uppercase;
      font-weight: 800;
      position: absolute;
      background-color: white;
      border-radius: 0.5rem;
      font-size: 0.6rem;
    }
    .experiment-text-container {
      padding: 1rem;
    }



    @media only screen and (min-width: 768px) {
      .image-gif {
          display:none;
    }
    .image {
          display:block;
        }
      
        .experiment-list-item {
      list-style-type: none;
      margin: 1rem;
      background: #eee;
      z-index: 5;
      max-width: 400px;
      transition: all 0.25s ease-in;
      border-radius: 0rem;
      text-align:center;
      &:hover {
        transition: all 0.25s ease-in;
      }
    }
    .experiment-container {
      position: relative;
      width: 100%;
      height: 100%;
      max-width: 400px;
  
      &:hover{
        .image-gif {
          display:block;
        }
        .image {
          display:none;
        }
        cursor: pointer;
      }
      img {
        width: 100%;
        height: 100%;
      }
    }
  }
  </style>
</li>

