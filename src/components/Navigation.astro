<nav id="mobileMenu" class="mobile-menu" role="navigation">
  <ul class="nav-list">
    <li class="nav-list-item">
      <a id="nav-home-URL"
        class="nav-list-link"
        href="/"
        aria-label="Link to Homepage & Portfolio">Work</a>
    </li>
    <li class="nav-list-item">
      <a id="nav-blog-url" class="nav-list-link" href="/my-experiences" aria-label="Link to Blog">My Experiences</a>
    </li>
    <li class="nav-list-item">
