    </li> -->
    <li class="nav-list-item">
      <a id="nav-linkedin-url" class="nav-list-link" href="#contact"
        >Let's Connect</a>
    </li>
  </ul>
</nav>

<script is:inline>
  var menuToggle = document.getElementById("menuToggle");
  if (menuToggle) {
    menuToggle.onclick = function () {
      var nav = document.getElementById("mobileMenu");
      var button = document.getElementById("menuToggle");
      var logo = document.getElementById("logo");
      if (nav && !nav.classList.contains("mobile-nav-active")) {
        nav.classList.add("mobile-nav-active");
        if (button) {
          button.classList.add("mobile-button-active");
          button.textContent = "X";
        }
      } else {
          if (nav) {
            nav.classList.remove("mobile-nav-active");
          }
          if (button) {
            button.classList.remove("mobile-button-active");
            button.textContent = "Menu";
          }
          if (logo) {
            logo.classList.remove("logo-colour-alt");
          }

      }
    };
  }
</script>

