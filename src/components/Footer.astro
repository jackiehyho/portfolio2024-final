---
const { footerText, copyrightText } = Astro.props;

import SocialMedia from "./SocialMedia.astro"


---

<footer class="container-footer">

    <section class="contact-section">
        <div class="contact-intro">
          <h2 id="contact" class="contact-title">Got a project or idea? Let's connect!</h2>
          <p class="contact-description">
            Fill out the form below & I'll get back to you as soon as possible.
          </p>
        </div>
      
        <form class="contact-form" action="https://api.web3forms.com/submit" method="POST">
      
          <input type="hidden" name="access_key" value="c9b8e3fe-39ce-4afa-9000-7bda3b721d42" />
          <input type="hidden" name="subject" value="New Contact Form Submission from Web3Forms" />
          <input type="hidden" name="from_name" value="My Website" />
          <!-- More custom ization options available in the docs: https://docs.web3forms.com -->
      
          <div class="form-group-container">
            <div class="form-group">
              <input id="name" name="name" class="form-input" placeholder="Your Name" type="text" />
            </div>
            <div class="form-group">
              <input id="email" name="email" class="form-input" placeholder="Your Email" type="email" />
            </div>
            <div class="form-group">
              <input id="phone" name="phone" class="form-input" placeholder="+1 (123) 456-7890" type="text" />
            </div>
            <div class="form-group">
              <textarea class="form-textarea" id="message" name="message" placeholder="Your Message"></textarea>
            </div>
          </div>
          <button class="primary-button" type="submit">Send Message</button>
        </form>
      
      </section>
<SocialMedia />

<p id="footer-copyright"><small>
    {footerText}<br />Follow <a href="https://jackiehyho.notion.site/Portfolio-Website-78a0cd74dea54b8db0e42f8444e030a2?pvs=4">my progress</a> on Notion!<br />{copyrightText} &copy; <span id="currentYear" /></small>
</p>
</footer>
<style>
	footer {
        border-top: 0.25px solid #eee;
        color:var(--primaryTextColor);
        padding: 1rem;
        text-align: center;
    }
    .footer-social{
            padding: 0;
    }
    .contact-section {
  padding: 3rem 1rem;
}

.contact-intro > * + * {
  margin-top: 1rem;
}

.contact-title {
  font-size: 1.875rem;
  font-weight: 700;
}

.contact-description {
  color: rgb(107 114 128);
}

.form-group-container {
  display: grid;
  gap: 1rem;
  margin-top: 2rem;
}

.form-group {
  display: flex;
  width: 100%;

  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.form-label {
  margin-bottom: 0.5rem;
}

.form-input,
.form-textarea {
  padding: 0.5rem;
  border: 1px solid #e5e7eb;
  display: flex;
  height: 2.5rem;
  width: 100%;
  border-radius: 0.375rem;
  font-size: 0.875rem;
  line-height: 1.25rem;
}

.form-input::placeholder,
.form-textarea:focus-visible {
  color: #6b7280;
}

.form-input:focus-visible,
.form-textarea:focus-visible {
  outline: 2px solid #2563eb;
  outline-offset: 2px;
}

.form-textarea {
  min-height: 120px;
}

.form-submit {
  width: 100%;
  margin-top: 1.2rem;
  background-color: #3124ca;
  color: #fff;
  padding: 13px 5px;
  border-radius: 0.375rem;
}
@media only screen and (min-width: 768px) {

.contact-section {
  max-width: 768px;
  margin: auto;
}
}
</style>
<script is:inline>
let yearDisplay = document.getElementById('currentYear');

let currentYear = new Date().getFullYear();
if (yearDisplay) {
    yearDisplay.textContent = currentYear.toString();
}


</script>

